{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "lib": ["es2016", "es2017", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["./develop/**/*.tsx", "./develop/**/*.ts"],
  "exclude": ["node_modules"]
}
